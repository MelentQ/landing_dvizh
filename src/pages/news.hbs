{{#extend "layout"}}
{{#content "main"}}
<section class="news" id="js-generated-news">
  <div class="container">
    <div class="news__inner">
      <h2 class="section-title news__title js-animation">Новости «Движения»</h2>

      <ul class="filter-links">
        <template id="filter-link-template">
          <li class="filter-links__item">
            <button class="filter-links__link" type="button"></button>
          </li>
        </template>
      </ul>

      <ul class="news__list">
        <template id="news-item-template">
          <li class="news-item">
            <a class="news-item__inner" title="Открыть страницу с новостью" href="#">
              <div class="news-item__image-wrapper">
                <img class="news-item__image" src="" alt="">
              </div>
              <div class="news-item__content">
                <div>
                  <time class="news-item__date" datetime=""></time>

                  <h3 class="news-item__title"></h3>

                  <p class="news-item__preview-text"></p>
                </div>

                <div class="link-with-arrow news-item__link">
                  <span class="link-with-arrow__label">Читать</span>
                  <svg class="link-with-arrow__icon">
                    <use xlink:href="#link-arrow">
                  </svg>
                </div>
              </div>
            </a>
          </li>
        </template>
      </ul>

      <button class="news__more-btn news__more-btn_hidden" type="button">
        <span class="news__more-btn-label">Ещё</span>
      </button>
    </div>
  </div>
</section>
{{/content}}
{{/extend}}